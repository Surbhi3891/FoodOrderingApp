<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ChefProfile">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="30dp"
        android:gravity="center">
        <TextView
            android:id="@+id/fullname_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_profile_black"
            android:textSize="18sp"
            android:paddingBottom="10dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/email_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_email_24"
            android:textSize="18sp"
            android:paddingBottom="10dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/mobile_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_phone_black"
            android:textSize="25sp"
            android:paddingBottom="10dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/location_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_location_"
            android:textSize="18sp"
            android:paddingBottom="10dp"
            android:textStyle="bold"/>
        <!--TextView
            android:id="@+id/logintype_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_usertype"
            android:textSize="18sp"
            android:paddingBottom="10dp"
            android:textStyle="bold"/-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/updateP_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_gray"
                android:gravity="center"
                android:padding="15dp"
                android:text="Update "
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <Button
                android:id="@+id/signOut_Btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/purplebutton"
                android:gravity="center"
                android:padding="15dp"
                android:text="Logout"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>