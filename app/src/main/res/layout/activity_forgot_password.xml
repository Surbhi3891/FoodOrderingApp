<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".forgotPassword"
    android:background="@drawable/bckgnd2">
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/linearlayout4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/background_color"
        android:padding="15dp"
        android:orientation="vertical"


        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter email to get password reset link"
            android:textSize="18sp"
            android:textColor="#DD1E1E1E"
            android:textStyle="bold"
            android:layout_marginBottom="30dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Enter Email"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_baseline_email_gray"
            android:drawablePadding="10dp"
            android:id="@+id/enterEmail"
            android:layout_marginBottom="20dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:layout_gravity="center"
            android:background="@drawable/purplebutton"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:id="@+id/resetPwd"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>